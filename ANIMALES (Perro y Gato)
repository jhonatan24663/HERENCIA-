class Animal:
    def __init__(self, nombre):
        self.nombre = nombre
    
    def mostrar_detalles(self):
        print(f"Animal: {self.nombre}")


class Perro(Animal):
    def __init__(self, nombre, raza):
        super().__init__(nombre)
        self.raza = raza
    
    def sonido(self):
        print("Guau guau")


class Gato(Animal):
    def __init__(self, nombre, color):
        super().__init__(nombre)
        self.color = color
    
    def sonido(self):
        print("Miau miau")
